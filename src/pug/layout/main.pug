include ../utils/mixins
block variables

doctype html
html(
  lang="ru"
)
  head
    meta(
      charset = "UTF-8"
    )
    meta(
      name = "viewport", content = "width=device-width, initial-scale=1"
    )
    meta(
      http-equiv = "X-UA-Compatible", content = "ie=edge"
    )
    link(
      rel = "stylesheet", href="https://fonts.googleapis.com/css?family=Oswald:200,300,400,500,600,700&display=swap&subset=cyrillic,cyrillic-ext"
    )
    meta(
      name = "description", content = description
    )

    title #{title}
    block head

  body(
    class = pageClass
    )
    include ../inc/modules/header

    main(
      class = "main"
    )
      block content
    
    include ../inc/modules/footer
  